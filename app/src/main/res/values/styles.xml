<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/ptsans_bold</item>
        <item name="android:textSize">@dimen/textSizeTitle</item>
    </style>

    <style name="inputText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textSize">@dimen/inputTextSize</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="btnElevated" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="backgroundTint">@color/md_theme_light_primary</item>
        <item name="android:textSize">@dimen/btnTextSize</item>
    </style>

    <style name="alertDialogTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_title_dialog</item>
        <item name="fontFamily">@font/ptsans_bold</item>
    </style>

    <style name="alertDialogText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_size_title_text</item>
        <item name="fontFamily">@font/ptsans_bold</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="boxInputText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/md_theme_light_error</item>
        <item name="helperTextTextAppearance">@style/inputText</item>
        <item name="endIconMode">clear_text</item>
    </style>
</resources>